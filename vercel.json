{
  "functions": {
    "backend/src/main.ts": {
      "runtime": "@vercel/node",
      "buildCommand": "cd backend && npm install && npm run build"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backend/src/main.ts"
    },
    {
      "source": "/(.*)",
      "destination": "/frontend/$1"
    }
  ],
  "buildCommand": "npm run build"
}
